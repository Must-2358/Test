-- ===== NO COOLDOWN SYSTEM =====
local NO_COOLDOWN_DATA_KEY = "MiniBypasser_NoCooldownData"
local isNoCooldownMode = false
local autoRejoinEnabled = false

-- Function to save settings to JSON file
local function saveNoCooldownSettings(targetName, delay, pattern, enabled)
    local data = {
        targetName = targetName,
        delay = delay,
        pattern = pattern,
        enabled = enabled,
        timestamp = os.time()
    }
    
    local success, result = pcall(function()
        writefile("MiniBypasser.json", HTTPService:JSONEncode(data))
        return true
    end)
    
    return success
end

-- Function to load settings from JSON file
local function loadNoCooldownSettings()
    local success, data = pcall(function()
        if isfile("MiniBypasser_NoCooldown.json") then
            return HTTPService:JSONDecode(readfile("MiniBypasser_NoCooldown.json"))
        end
        return nil
    end)
    
    if success and data then
        return data
    end
    return nil
end

-- Function to delete settings file
local function deleteNoCooldownSettings()
    local success = pcall(function()
        if isfile("MiniBypasser_NoCooldown.json") then
            delfile("MiniBypasser_NoCooldown.json")
            return true
        end
        return false
    end)
    
    return success
end

-- Function to auto-rejoin and reload script
local function autoRejoinAndReload()
    if not autoRejoinEnabled then return end
    
    warn("ðŸ”„ Auto-rejoin triggered due to cooldown")
    
    -- Save current place ID
    local placeId = game.PlaceId
    
    -- Teleport to same place
    TeleportService:Teleport(placeId, LocalPlayer)
    
    -- Wait a moment then reload script
    task.wait(3)
    
    -- Reload the script (this would typically be handled by your executor)
    warn("ðŸ”„ Reloading script...")
    -- Note: Actual script reload depends on your executor's implementation
end

-- Check if we should auto-start from saved settings
local savedSettings = loadNoCooldownSettings()
if savedSettings and savedSettings.enabled then
    isNoCooldownMode = true
    autoRejoinEnabled = true
    warn("ðŸ“ No Cooldown mode loaded from saved settings")
end

-- NEW: Custom format function with user pattern
local function formatWithPattern(message, clearPattern)
    -- Use "__" as default if pattern is empty
    local pattern = clearPattern
    if pattern == nil or pattern == "" then
        pattern = "__"
    end
    
    -- Add pattern before the message
    local formatted = pattern .. message
    
    -- Ensure exactly 200 characters
    local targetLength = 200
    local currentLength = utf8.len(formatted) or #formatted
    
    if currentLength >= targetLength then
        return string.sub(formatted, 1, targetLength)
    end
    
    -- Add more of the pattern to reach 200 characters
    local needed = targetLength - currentLength
    local patternLength = #pattern
    
    if patternLength > 0 then
        local repeats = math.ceil(needed / patternLength)
        local extraPattern = string.rep(pattern, repeats)
        formatted = extraPattern .. formatted
    else
        formatted = string.rep("_", needed) .. formatted
    end
    
    -- Ensure exactly 200 characters
    local finalLength = utf8.len(formatted) or #formatted
    if finalLength > targetLength then
        formatted = string.sub(formatted, 1, targetLength)
    end
    
    return formatted
end

